const services = [
  {
    icon: `<svg width="28" height="28" viewBox="0 0 28 28" fill="none"><path d="M14 3.5L3.5 9.333v9.334L14 24.5l10.5-5.833V9.333L14 3.5z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/><path d="M14 14v10.5M14 14l9-5M14 14L5 9" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/></svg>`,
    title: 'AI Strategy & Roadmap',
    description:
      'We assess your current operations, identify high-impact AI opportunities, and create a practical roadmap tailored to your business goals and budget.',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 28 28" fill="none"><rect x="3" y="5" width="22" height="16" rx="2" stroke="currentColor" stroke-width="1.5"/><path d="M8 25h12M14 21v4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/><path d="M9 11l3 3 7-7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
    title: 'Process Automation',
    description:
      'Automate repetitive tasks across your workflows — from document processing and data entry to customer support — reducing costs and human error.',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 28 28" fill="none"><circle cx="14" cy="14" r="10.5" stroke="currentColor" stroke-width="1.5"/><path d="M14 8v6l4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
    title: 'Predictive Analytics',
    description:
      'Turn your historical data into actionable forecasts. Predict demand, identify risks, and make confident decisions backed by AI-driven insights.',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 28 28" fill="none"><path d="M21 12a7 7 0 11-14 0 7 7 0 0114 0z" stroke="currentColor" stroke-width="1.5"/><path d="M7 21c0-3.5 3.134-7 7-7s7 3.5 7 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/><circle cx="14" cy="10" r="3" stroke="currentColor" stroke-width="1.5"/></svg>`,
    title: 'Custom AI Solutions',
    description:
      'From intelligent chatbots to computer vision systems, we design and build custom AI applications that solve your specific business challenges.',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 28 28" fill="none"><path d="M5 22V10l9-6.5L23 10v12a1 1 0 01-1 1H6a1 1 0 01-1-1z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/><path d="M11 23v-7h6v7" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/></svg>`,
