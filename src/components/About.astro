<style>
  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-content p {
    margin-top: 1rem;
    font-size: 1.05rem;
  }

  .about-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .code-block {
    padding: 1.5rem;
  }

  .code-dots {
    display: flex;
    gap: 6px;
    margin-bottom: 1.25rem;
  }

  .code-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--color-border);
  }

  .code-dots span:first-child { background: #ef4444; }
  .code-dots span:nth-child(2) { background: #eab308; }
  .code-dots span:nth-child(3) { background: #22c55e; }

  pre {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    line-height: 1.8;
    color: var(--color-text-muted);
  }

  .kw { color: var(--color-accent-light); }
  .str { color: #22c55e; }
  .comment { color: #555570; }

  .about-highlights {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .highlight {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text);
    font-weight: 500;
    font-size: 0.95rem;
  }

  .highlight svg {
    color: var(--color-accent-light);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .about-visual {
      order: 2;
    }
  }
</style>
